                    <ControlTemplate>
                        <Grid RenderTransformOrigin="0.5,0.5" Width="13" Height="13">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="0" Y="0" />
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                </TransformGroup>
                            </Grid.RenderTransform>
